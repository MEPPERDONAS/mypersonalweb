---
import Whatsapp from "../assets/icons/Whatsapp.astro";
import InstaIcon from "../assets/icons/InstaIcon.astro";
import Socialpill from "./Socialpill.astro";
---

<footer class="relative mt-20 pt-5 border-t border-zinc-300 dark:border-zinc-800 bg-zinc-200 dark:bg-black w-full overflow-hidden justify-items-center">

    <div class="md:max-w-xs text-left md:text-right flex flex-col justify-end gap-2">
        <p class="text-zinc-500 dark:text-zinc-400 text-sm text-center leading-relaxed">
            © {new Date().getFullYear()} Desarrollado por 
            <span class="font-bold text-zinc-900 dark:text-white dark:hover:mix-blend-difference hover:drop-shadow-[0_0_8px_rgba(255,255,0,0.5)] transition-all duration-300">
                Fabian Solano
            </span>
        </p>
            <div class="flex justify-center gap-4 mb-6">
                <Socialpill class="text-sm border-0" href="https://wa.me/573143608404?text=Hola,%20me%20gustaría%20más%20información." aria-label="Whatsapp">
                    <Whatsapp class="size-4"/>
                    Whatsapp
                </Socialpill>
                <Socialpill class="text-sm border-0" href="https://www.instagram.com/fabiian_17sd/" aria-label="Instagram">
                    <InstaIcon class="size-4"/>
                    instagram
                </Socialpill>
            </div>

        <p class="text-xs text-center mb-10 text-zinc-400">Hecho ccon Astro y amor.</p>
    </div>

</footer>