---
import Sectioncontainer from '../components/Sectioncontainer.astro';
import Layout from '../layouts/Layout.astro';
import Badges from '../components/Badges.astro';
import GithubIcon from '../assets/icons/Github.astro';
import LinkdinIcon from '../assets/icons/Linkdin.astro';
import GmailIcon from '../assets/icons/gmail.astro';
import WhatsappIcon from '../assets/icons/Whatsapp.astro';
import SocialPill from '../components/Socialpill.astro';
import Timeline from '../components/Timeline.astro';
import Estudiosicon from '../assets/icons/estudiosicon.astro';
---

<Layout
 title="Portafoleo de Fabian Solano"
 description="Portafolio de Fabian Solano, Administrador de Empresas con énfasis en la planeación y gestión de proyectos.">
    
    <main class="px-4 sm:px-6 lg:px-8">
        <Sectioncontainer class="py-20 sm:py-32 pb-10">
			<div class="justify-items-center">
			<img
				class=" md:hidden rounded-full size-30"
				src="https://lh3.googleusercontent.com/a/ACg8ocJKQ7p1-bszCiNz1TAZIwfVnDB1B3R-2EeCwkgtmOsEnslTYcE5=s83-c-mo" alt=""
				>
            
				<h1 class="text-zinc-950 text-center text-2xl sm:text-5xl lg:text-5xl font-bold flex flex-col sm:flex-row gap-x-4 gap-y-2 py-10">
                Hola soy Fabian! 
                <a 
                    href="https://www.linkedin.com/in/fabian-mauricio-solano-dorado-5225a03a9/" 
                    target="_blank"
                    rel="noopener"
                    class="flex justify-center xl:justify-start items-center"
                >
                    <Badges>Disponible</Badges>
                </a>
            </h1>
			</div>

            <h2 class="text-base sm:text-lg lg:text-xl text-zinc-700 leading-relaxed max-w-4xl">
                <span class="font-bold">Administrador de Empresas</span> con énfasis en la planeación y gestión de proyectos, con 
                capacidad para apoyar la formulación, seguimiento y control de actividades 
                orientadas al cumplimiento de <span class="text-cyan-800 font-semibold">objetivos organizacionales.</span> Manejo herramientas 
                digitales y software de apoyo para la organización de información, elaboración de 
                informes y optimización de procesos
            </h2>

            <nav class="flex flex-wrap flex-row gap-2 sm:gap-3 mt-6">
                    <SocialPill href="https://github.com/MEPPERDONAS">
                        <GithubIcon class="size-5 sm:size-6"/>
                        github
                    </SocialPill>
                    <SocialPill href="https://www.linkedin.com/in/fabian-mauricio-solano-dorado-5225a03a9/">
                        <LinkdinIcon class="size-5 sm:size-6"/>
                        linkedin
                    </SocialPill>
                    <SocialPill href="https://wa.me/573143608404">
                        <WhatsappIcon class="size-5 sm:size-6"/>
                        Whatsapp
                    </SocialPill>
                    <SocialPill href="mailto:fasolano@unicauca.edu.co">
                        <GmailIcon class="size-5 sm:size-6"/>
                        fasolano@unicauca.edu.co
                    </SocialPill>	
            </nav>
        </Sectioncontainer>
        <Sectioncontainer id="about">
            <h2 class="font-bold flex flex-col sm:flex-row items-center text-lg sm:text-xl mb-6 sm:mb-8 gap-2 sm:gap-x-4">
                <Estudiosicon class="size-5 sm:size-6 items-center" />
                Educacion
            </h2>
            <Timeline />
        </Sectioncontainer>
    </main>
</Layout>